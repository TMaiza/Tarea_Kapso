<h1>Buscar Ejercicios</h1>
<%= form_with url: exercises_search_path, method: :get, local: true do |form| %>
  <%= form.label :query, 'Buscar ejercicio por nombre:' %>
  <%= form.text_field :query %>
  <%= form.submit 'Buscar' %>
<% end %>

<% if @exercises.present? %>
  <h2>Resultados de la búsqueda:</h2>
  <ul>
    <% @exercises.each do |exercise| %>
      <li>
        <strong><%= exercise['name'] %></strong><br>
        <%= exercise['description'] %><br>
        <%= link_to 'Agregar a entrenamiento', new_training_exercise_path(training_id: @training.id, exercise_id: exercise['id']), class: 'btn btn-primary' %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No se encontraron ejercicios para esa búsqueda.</p>
<% end %>
